<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP_Verification">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_arrow_back4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_18sdp"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toTopOf="@id/tv_otp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="OTP Verification"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/iv_arrow_back4"/>
        <TextView
            android:id="@+id/tv_comment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/comment2"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_otp"/>
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_49sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:text="Enter 4 - digits code"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/poppins_light"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment1"/>
        <LinearLayout
            android:weightSum="4"
            android:gravity="center_horizontal"
            android:id="@+id/ll_otpCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_code">

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/otp_edittext_background"
                android:gravity="center"
                android:hint="•"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:elevation="5dp"
                android:maxLength="1"
                android:inputType="number"
                android:textStyle="bold" />

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="•"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:elevation="5dp"
                android:maxLength="1"
                android:inputType="number"
                android:digits="0123456789"
                android:textStyle="bold"
                android:background="@drawable/otp_edittext_background"
                android:gravity="center"
                />
            <EditText
                android:layout_weight="1"
                android:id="@+id/et_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:elevation="5dp"
                android:hint="•"
                android:fontFamily="@font/poppins_light"
                android:textSize="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:maxLength="1"
                android:inputType="number"
                android:digits="0123456789"
                android:textStyle="bold"
                android:background="@drawable/otp_edittext_background"
                android:gravity="center"
                />
            <EditText
                android:layout_weight="1"
                android:id="@+id/et_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:elevation="5dp"
                android:hint="•"
                android:fontFamily="@font/poppins_light"
                android:textSize="@dimen/_10sdp"
                android:maxLength="1"
                android:inputType="number"
                android:digits="0123456789"
                android:textStyle="bold"
                android:background="@drawable/otp_edittext_background"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/ll_otpCode">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_timer"
                android:text="00:59"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/dark_red"
                />

            <TextView
                android:id="@+id/tv_resendOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:text="@string/resend_otp"
                android:fontFamily="@font/poppins"
                android:paddingRight="@dimen/_15sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/dark_red"
                android:lines="1"
                android:textAlignment="textEnd"
                app:layout_constraintRight_toRightOf="parent"
                />



        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_wrongOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/dark_red"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@+id/ll_otpCode"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:background="@drawable/btn_bg"
            android:text="Submit"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/ll_timer"
            tools:layout_editor_absoluteX="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>